{
  "name": "postflow",
  "version": "1.0.0",
  "description": "PostFlow - Streamlined film school post-production workflow management",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/app.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "jest",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/scripts/seed.js",
    "setup": "npm run install-all && npm run seed"
  },
  "keywords": [
    "film",
    "post-production",
    "project-management",
    "web-app"
  ],
  "author": "Film School",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
